@model IEnumerable<BoatRental.Models.BoatType>

@{
    ViewData["Title"] = "Index";
}
<h1>Boat Type List</h1>
<p>
    <a asp-action="Add"><button type="button" class="btn btn-info">Add Boat Type</button></a>
</p>

<table class="table">
    <thead>
        <tr class="p-3 mb-2 bg-light text-dark">
            <th>
                @Html.DisplayNameFor(model => model.BoatsType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BoatsType)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="btn" data-toggle="tooltip" data-placement="top" title="Edit Boat Type"><i class="fa fa-edit"></i></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger ml-1" onclick="return confirm('Are you sure to delete this record?')"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
