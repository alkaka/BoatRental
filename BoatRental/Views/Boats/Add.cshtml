@model BoatRental.Models.Boat

@{
    ViewData["Title"] = "Create";
}

<h4>Add Boat</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BoatNmber" class="control-label"></label>
                <input asp-for="BoatNmber" class="form-control" />
                <span asp-validation-for="BoatNmber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingNmber" class="control-label"></label>
                <input asp-for="BookingNmber" class="form-control" />
                <span asp-validation-for="BookingNmber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckInTime" class="control-label"></label>
                <input asp-for="CheckInTime" class="form-control" />
                <span asp-validation-for="CheckInTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerPersonalNumber" class="control-label"></label>
                <input asp-for="CustomerPersonalNumber" class="form-control" />
                <span asp-validation-for="CustomerPersonalNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BoatTypeId" class="control-label"></label>
                <select asp-for="BoatTypeId" class ="form-control" asp-items="ViewBag.BoatTypeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
